{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": ["src/**", "tsconfig*.json", "package.json"]
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["src/**", "eslint.config.*", "tsconfig*.json"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["src/**", "tests/**", "tsconfig*.json"]
		},
		"test:unit": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["src/**", "tests/unit/**", "vitest*.config.ts"],
			"env": ["KAFKA_TS_LOG_LEVEL"]
		},
		"test:integration": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["src/**", "tests/integration/**", "vitest*.config.ts"],
			"env": ["KAFKA_TS_LOG_LEVEL", "VITEST_MAX_WORKERS", "KAFKA_BROKERS"],
			"cache": false
		},
		"clean": {
			"outputs": [],
			"cache": false
		}
	}
}
