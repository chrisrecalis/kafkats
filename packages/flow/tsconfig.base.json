{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@kafkats/flow": ["src/index.ts"],
			"@kafkats/flow/testing": ["src/testing.ts"]
		},
		"lib": ["ES2022"],
		"allowJs": false,
		"strict": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "dist", "coverage"]
}
