{
	"name": "@kafkats/benchmark",
	"private": true,
	"version": "0.1.0",
	"description": "Benchmarks comparing @kafkats/client with kafkajs",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"start": "tsx src/index.ts",
		"prebench:producer": "pnpm -C ../client build",
		"prebench:consumer": "pnpm -C ../client build",
		"prebench:all": "pnpm -C ../client build",
		"bench:producer": "tsx src/producer-benchmark.ts",
		"bench:consumer": "tsx src/consumer-benchmark.ts",
		"bench:all": "tsx src/index.ts"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@kafkats/client": "workspace:*",
		"@platformatic/kafka": "^1.22.0",
		"kafkajs": "^2.2.4"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
