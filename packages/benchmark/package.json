{
	"name": "@kafkats/benchmark",
	"private": true,
	"version": "0.1.0",
	"description": "Benchmarks comparing @kafkats/client with kafkajs",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"start": "tsx src/index.ts",
		"prebench:producer": "pnpm -C ../client build",
		"prebench:consumer": "pnpm -C ../client build",
		"prebench:share": "pnpm -C ../client build",
		"prebench:all": "pnpm -C ../client build",
		"bench:producer": "tsx src/index.ts --operation producer",
		"bench:consumer": "tsx src/index.ts --operation consumer",
		"bench:share": "tsx src/index.ts --operation share",
		"bench:all": "tsx src/index.ts",
		"preprofile:producer": "pnpm -C ../client build && pnpm build",
		"profile:producer": "0x -D profiles/producer -- node dist/profile-producer.js",
		"preprofile:consumer": "pnpm -C ../client build && pnpm build",
		"profile:consumer": "0x -D profiles/consumer -- node dist/profile-consumer.js",
		"preheap:producer": "pnpm -C ../client build && pnpm build",
		"heap:producer": "node dist/heap-producer.js",
		"preheap:consumer": "pnpm -C ../client build && pnpm build",
		"heap:consumer": "node dist/heap-consumer.js"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@kafkats/client": "workspace:*",
		"@platformatic/kafka": "^1.22.0",
		"kafkajs": "^2.2.4"
	},
	"devDependencies": {
		"0x": "^6.0.0",
		"@types/node": "^24.10.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
