{
	"name": "@kafkats/client",
	"private": false,
	"version": "0.1.0",
	"description": "Pure-protocol Kafka client, consumer/producer, and EOS patterns in TypeScript.",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "pnpm clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"test": "vitest run --config vitest.unit.config.ts tests",
		"test:unit": "vitest run --config vitest.unit.config.ts tests/unit",
		"test:integration": "VITEST_INTEGRATION=1 vitest run --config vitest.integration.config.ts tests/integration",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"clean": "rm -rf dist",
		"benchmark:consumer": "tsx benchmarks/consumer-benchmark.ts",
		"prepack": "pnpm -w turbo run build --filter=$npm_package_name"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@node-rs/crc32": "^1.10.6",
		"@testcontainers/kafka": "^11.8.1",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^61.3.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-promise": "^7.2.1",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"testcontainers": "^11.8.1",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vitest": "^4.0.12"
	},
	"peerDependencies": {
		"@node-rs/crc32": "^1.10.6"
	},
	"peerDependenciesMeta": {
		"@node-rs/crc32": {
			"optional": true
		}
	}
}
