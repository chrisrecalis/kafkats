{
	"name": "@kafkats/flow-state-lmdb",
	"private": false,
	"version": "0.6.0",
	"description": "LMDB state store provider for @kafkats/flow",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"keywords": [
		"kafka",
		"streams",
		"state",
		"lmdb",
		"persistent",
		"storage",
		"typescript"
	],
	"homepage": "https://chrisrecalis.github.io/kafkats",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chrisrecalis/kafkats.git",
		"directory": "packages/flow-state-lmdb"
	},
	"bugs": {
		"url": "https://github.com/chrisrecalis/kafkats/issues"
	},
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "pnpm clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"test": "vitest run tests",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"clean": "rm -rf dist",
		"prepack": "pnpm -w turbo run build --filter=$npm_package_name"
	},
	"dependencies": {
		"lmdb": "^3.2.6"
	},
	"peerDependencies": {
		"@kafkats/flow": "workspace:>=0.6.0"
	},
	"devDependencies": {
		"@kafkats/flow": "workspace:^",
		"@types/node": "^24.10.1",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3",
		"vitest": "^4.0.12"
	}
}
