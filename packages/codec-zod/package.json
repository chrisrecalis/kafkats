{
	"name": "@kafkats/codec-zod",
	"private": false,
	"version": "0.1.0",
	"description": "Zod codec helpers for @kafkats/client.",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "pnpm clean && tsc -p tsconfig.build.json",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"clean": "rm -rf dist",
		"prepack": "pnpm -w turbo run build --filter=$npm_package_name"
	},
	"dependencies": {
		"@kafkats/client": "workspace:^"
	},
	"peerDependencies": {
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"typescript": "^5.9.3",
		"zod": "^4.1.11"
	}
}
