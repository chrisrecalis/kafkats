{
	"name": "kafkats-workspace",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"build": "turbo run build",
		"clean": "turbo run clean",
		"lint": "turbo run build --filter=@kafkats/* && eslint \"packages/**/*.{ts,tsx}\"",
		"lint:fix": "turbo run build --filter=@kafkats/* && eslint \"packages/**/*.{ts,tsx}\" --fix",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test:unit",
		"test:unit": "turbo run test:unit",
		"test:integration": "turbo run test:integration",
		"format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
		"format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
		"docs:dev": "pnpm -C packages/docs dev",
		"docs:build": "pnpm -C packages/docs build",
		"docs:preview": "pnpm -C packages/docs preview",
		"version-packages": "changeset version",
		"release": "changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"turbo": "^2.7.2",
		"typescript-eslint": "^8.47.0"
	}
}
